				</configuration>
			</plugin>

			<!-- Shell packaging -->


			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<version>1.7</version>
				<configuration>
					<programs>
						<program>
							<mainClass>org.springframework.shell.Bootstrap</mainClass>
							<id>spring-data-release-shell</id>
						</program>
					</programs>
				</configuration>
